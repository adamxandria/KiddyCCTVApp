<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="bottom">


    <TextView
        android:id="@+id/textViewMessageIncoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_incoming"
        android:padding="10dp"
        android:text="Incoming Message"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:paddingStart="5dp">

        <TextView
            android:id="@+id/textViewNameIncoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/poppin_semibold"
            android:text="Name" />

        <TextView
            android:id="@+id/textViewTimestampIncoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/poppin_semibold"
            android:text="Timestamp" />
    </LinearLayout>

</LinearLayout>
